@import "../../shared/css/shared.pcss";

/* Global Header Shopping Cart
/* ========================================================================== */

.esri-header-shopping-cart {
  position: relative;
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0px rgba(0,94,149, 1);
  }
  100% {
    box-shadow: 0 0 0 5px rgba(0,94,149, 0);
  }
}

.esri-header-shopping-cart--items {
  background: var(--blue);
  border-radius: 10px;
  box-shadow: 0 0 0 0 rgba(0,94,149, 1);
  color: var(--mono-100);
  font-size: 8px;
  font-weight: 600;
  left: 75%;
  line-height: 1.5;
  min-width: 15px;
  padding: 3px 4px 2px 4px;
  position: absolute;
  text-align: center;
  transform: translate(-50%, -50%);
  transition: all .25s ease-out;
  top: 35%;
  width: auto;
  z-index: 777;

  &[data-cart-updated='true'] {
    animation: pulse 1s 1;
    height: 30px;
    font-size: 12px;
    left: 50%;
    line-height: 2.5;
    top: 50%;
    width: 30px;
  }
}

.esri-header-shopping-cart {
  &[data-cart-empty='true'] {
    & .esri-header-shopping-cart--icon,
    & .esri-header-shopping-cart--items {
      display: none;
    }
  }
}

.esri-header-shopping-cart--icon {
  fill: currentColor;
  color: var(--mono-0);
  display: block;
  text-decoration: none;
  height: 24px;
  margin: 16px;
  width: 24px;
}

.esri-header-shopping-cart--image {
  height: 24px;
  width: 24px;
}
