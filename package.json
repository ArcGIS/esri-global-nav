{
  "name": "esri-global-nav",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "style": "index.css",
  "scripts": {
    "clean": "git clean -X -d -f",
    "lint": "npm run lint:ec && npm run lint:css && npm run lint:js",
    "lint:ec": "echint",
    "lint:css": "stylelint *.css css/*.css",
    "lint:js": "eslint *.js --cache --ignore-pattern .gitignore",
    "start": "rapid",
    "test": "npm run lint"
  },
  "devDependencies": {
    "echint": "^4.0.1",
    "echint-config-dev": "1.0.0",
    "eslint": "^3.15.0",
    "eslint-config-dev": "^1.0.0",
    "pre-commit": "^1.2.2",
    "rapid": "^1.1.0",
    "rapid-config-dev": "^1.1.3",
    "stylelint": "^7.8.0",
    "stylelint-config-dev": "^1.0.0"
  },
  "echint": {
    "extends": "dev"
  },
  "eslintConfig": {
    "extends": "dev"
  },
  "pre-commit": [
    "lint"
  ],
  "rapid": {
    "extends": "dev",
    "html": {
      "from": "demo/index.html"
    },
    "css": {
      "from": "demo/index.css"
    },
    "js": {
      "from": "demo/index.js"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-dev"
  }
}
