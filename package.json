{
  "name": "esri-global-nav",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "context": "index.json",
  "style": "index.css",
  "template": "index.jsx",
  "scripts": {
    "lint": "npm run lint:ec && npm run lint:css && npm run lint:js",
    "lint:ec": "echint",
    "lint:css": "stylelint *.css css/*.css",
    "lint:js": "eslint *.js --cache --ignore-pattern .gitignore",
    "start": "rapid",
    "test": "npm run lint"
  },
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "cssnano": "^3.10.0",
    "echint": "^2.1.0",
    "echint-config-dev": "1.0.0",
    "eslint": "^3.8.1",
    "eslint-config-dev": "^1.0.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-partial-import": "^3.1.0",
    "postcss-short": "^3.0.3",
    "pre-commit": "^1.2.2",
    "rapid": "github:jonathantneal/rapid",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "stylelint": "^7.7.1",
    "stylelint-config-dev": "^1.0.0"
  },
  "pre-commit": [
    "lint"
  ],
  "rapidConfig": {
    "css": {
      "plugins": [
        "postcss-partial-import",
        [
          "postcss-cssnext",
          {
            "autoprefixer": false
          }
        ],
        "postcss-short",
        [
          "cssnano",
          {
            "autoprefixer": false
          }
        ]
      ]
    },
    "js": {
      "plugins": [
        [
          "rollup-plugin-node-resolve",
          {
            "jsnext": true
          }
        ],
        [
          "rollup-plugin-babel",
          {
            "presets": [
              [
                "es2015",
                {
                  "modules": false
                }
              ]
            ],
            "plugins": [
              "external-helpers"
            ]
          }
        ],
        "rollup-plugin-uglify"
      ]
    }
  },
  "echint": {
    "extends": "dev"
  },
  "eslintConfig": {
    "extends": "dev"
  },
  "stylelint": {
    "extends": "stylelint-config-dev"
  }
}
